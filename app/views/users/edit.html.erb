<main class="main">
  <div class="form__wrapper">
    <h2 class="page-heading">USER-EDIT-</h2>
    <div class="form-wrapper">
      <%= form_with model: @user, url: user_path(current_user), method: :put, local: true do |f| %>

      <div class="field">
        <%= f.label :nickname %><br />
        <%= f.text_field :nickname, class: :form__texit, id: "user_nickname", class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: :form__texit, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="actions">
        <%= f.submit "EDIT", class: "btn form-btn" %>
      </div>
      <% end %>
    </div>
    </div>
  </div>
</main>